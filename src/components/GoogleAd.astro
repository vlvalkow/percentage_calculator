---
import AdPlaceholder from "./AdPlaceholder.astro";
const { id, placeholderLayout, showOnMobile = true } = Astro.props;

const adsMode = import.meta.env.ADS_MODE;
---

{
  adsMode === "google_ads" ? (
    <>
      <ins
        class={
          "adsbygoogle " + (showOnMobile ? "d-block" : "d-none  d-lg-block")
        }
        data-ad-client="ca-pub-1410913885911026"
        data-ad-slot={id}
        data-ad-format="auto"
        data-full-width-responsive="true"
      />
      <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
    </>
  ) : adsMode === "placeholder_ads" ? (
    <AdPlaceholder layout={placeholderLayout} showOnMobile={showOnMobile} />
  ) : null
}
